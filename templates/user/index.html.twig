{% extends 'base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <button type="button" id="sidebarCollapse" class="btn btn-dark mr-2">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand" href="#">
           <img src="{{ logo }}" alt="Logo" style="height:45px !important">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user-circle mr-1"></i> Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-cog mr-1"></i> Configuraci√≥n</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-1"></i> Salir</a>
                </li>
            </ul>
        </div>
    </nav>    
    <!-- Sidebar -->
    {% include 'navigation_admin.html.twig' %}
    <!-- Contenido Principal -->
    <div id="content">
        <div class='row' style="padding-top:50px !important">
            <div class='col-12 col-md-12 col-lg-12'>
                <div class="container-fluid p-4">
                    <h2>Usuarios en el Sistema</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-11 col-md-8 col-lg-8 mx-auto mt-0 mt-md-auto mb-0 mb-md-auto">
                <div class='text-right'>
                    <a href="{{ path('app_user_new') }}" title='Nuevo Usuario'><i class="fa-solid fa-user-plus"></i></a>
                </div>
                <table class="table table-bordered table-striped table-hover" style="width: 85% !important;">
                    <thead class="thead-dark text-white">
                        <tr class='tr-planificacion-head text-center'>
                            <th>Id</th>
                            <th>Name</th>                                
                            <th class='text-center d-none d-md-table-cell'>Email</th>
                            <th>Telefono</th>
                            <th class='text-center d-none d-md-table-cell'>Nivel</th>
                            <th class='text-center d-none d-md-table-cell'>Estado</th>
                            <th class='text-center d-none d-md-table-cell'>Fecha_creacion</th>
                            <th class='text-center d-none d-md-table-cell'>Roles</th>                                
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set i = 1 %}
                        {% for user in users %}
                        <tr class='tr-planificacion-h'>
                            <td>{{ i }}</td>
                            <td>{{ user.name }}</td>
                            <td class='text-center d-none d-md-table-cell'>{{ user.email }}</td>
                            <td>{{ user.telefono }}</td>
                            <td class='text-center d-none d-md-table-cell'>
									{% if (user.nivel == 10) %}
										Consultor
									{% elseif (user.nivel == 30) %}
										Operador
									{% elseif (user.nivel == 99) %}
										Administrador
									{% endif %}                                
                            </td>
                            <td class='text-center d-none d-md-table-cell'>
                                {% if (user.estado =="1") %}
                                     <span class='text-success'>Activo</span>
                                {% else %}
                                     <span class='text-danger'>Inactivo</span>
                                {% endif %}                                
                            </td>
                            <td class='text-center d-none d-md-table-cell'>{{ user.fechaCreacion ? user.fechaCreacion|date('d/m/Y') : '' }}</td>
                            <td class='text-center d-none d-md-table-cell'>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td class='text-center'>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" title='Ver detalles del Usuario'><i class="fa-solid fa-eye"></i></a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" title='Editar detalles del cliente'><i class="fa-regular fa-pen-to-square"></i></a>
                            </td>
                        </tr>
                        {% set i = i + 1 %}
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <script>
        $(document).ready(function() {
            // Colapsar/Expandir Sidebar
            $('#sidebarCollapse').on('click', function() {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
            
            // Hacer que los items del sidebar sean activos al hacer clic
            $('.sidebar-item').on('click', function() {
                $('.sidebar-item').removeClass('active');
                $(this).addClass('active');
            });
        }); 
    </script>
{% endblock %}
