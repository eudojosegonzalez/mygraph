{% extends 'base.html.twig' %}

{% block title %}Movimiento de Inventario{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <button type="button" id="sidebarCollapse" class="btn btn-dark mr-2">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand" href="#">
           <img src="{{ logo }}" alt="Logo" style="height:45px !important">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user-circle mr-1"></i> Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-cog mr-1"></i> Configuración</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-1"></i> Salir</a>
                </li>
            </ul>
        </div>
    </nav>    
    <!-- Sidebar -->
    {% include 'navigation_admin.html.twig' %}
    <!-- Contenido Principal -->
    <div id="content">
        <div class="row" style="padding-top:50px !important">
            <div class="col-11 col-md-5 col-lg-5 mx-auto mt-0 mt-md-auto mb-0 mb-md-auto">
                <div class='text-right'>
                    <a href="{{ path('app_movimiento_index') }}" title="Regresar al Listado"><i class="fa-solid fa-list"></i></a>
                </div>
                <div class='card'>
                    <div class='card-header'>
                        <h2>Movimiento de Inventario</h2>
                        <input type='hidden' id='idMovimiento' name='idMovimiento' value='{{ movimiento.id }}' style="display:none">
                    </div>
                    <div class='card-body'>
                        <div class='form-group'>
                            <label for='tipo'>Tipo de operación</label>
                            <select class='form-control' id='tipo' name='tipo' required disabled>
                                {% if (movimiento.tipo == 1) %}
                                    <option value='1' selected>Anexar a la existencia</option>
                                    <option value='2'>Rebajar a la existencia</option>
                                {% else %}
                                    <option value='1'>Anexar a la existencia</option>
                                    <option value='2' selected>Rebajar a la existencia</option>

                                {% endif %}
                            </select>
                        </div>
                        <div class='form-group'>
                            <label for='cantidad'>Cantidad de Material</label>
                            <input class='form-control' type="number" id='cantidad' name='cantidad' step="0.01" min="0" placeholder="0.00" title='Cantidad de material a anexar o retirar del inventario' style='text-align:right !important' disabled value="{{ movimiento.cantidad | number_format(2,'.','') }}">
                        </div>     
                        <div class='form-group'>
                            <label for='idProyecto'>Proyecto involucrado</label>
                            <div class="input-group">
                                <input class='form-control' type="text" id='idProyecto' name='idProyecto' title='Proyecto en el cual se involucró el material' value="{{ movimiento.proyecto ? movimiento.proyecto : "" }}" disabled>
                            </div>
                        </div>
                        <div class='form-group'>
                            <label for='documento'>Documento</label>
                            <input class='form-control' type="text" id='documento' name='documento'  title='Factura o documento que representa la adquisición del material' value="{{ movimiento.documento ? movimiento.documento : "" }}" disabled>
                        </div>       
                        <div class='form-group'>
                            <label for='idMaterial'>Material</label>
                            <select class='form-control' id='idMaterial' name='idMaterial' required onchange="javascript:changeMaterial()" disabled>
                                {% for material in materiales %}  
                                    {% if (movimiento.inventario.id == material.id) %}   
                                        <option value='{{ material.id }}' selected>{{ material.nombre }}</option>
                                    {% else %}
                                        <option value='{{ material.id }}'>{{ material.nombre }}</option>
                                    {% endif %}
                                {% else %}
                                    <option value='-99'>No hay materiales activos en la Base de Datos</option>
                                {% endfor %}
                            </select>                            
                        </div>                                                                                         
                        <div class='form-group'>
                            <label for='unidad'>Unidad involucrada</label>
                            <select class='form-control' id='unidad' name='unidad' disabled>
                                {% for unidad in unidades %}     
                                    {% if (movimiento.unidad.id == unidad.id) %}   
                                        <option value='{{ unidad.id }}' selected>{{ unidad.nombre }}</option>   
                                    {% else %}
                                        <option value='{{ unidad.id }}'>{{ unidad.nombre }}</option>   
                                    {% endif %}                          
                                {% else %}
                                    <option value='-99'>No hay unidades en el sistema</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class='form-group'>
                            <label for='estado'>Estado</label>
                            <select class='form-control' id='estado' name='estado'> 
                                {% if (movimiento.estado == 1)  %}
                                    <option value='1' selected>Activo</option>
                                    <option value='2' >Inactivo</option>
                                {% else %}
                                    <option value='1'>Activo</option>
                                    <option value='2' Selected>Inactivo</option>                                    
                                {% endif %}
                            </select>
                        </div>                        
                        <div class='form-group'>
                            <label for='observacion'>Observacion</label>
                            <textarea class='form-control' id='observacion' name='observacion'>{{ movimiento.observacion }}</textarea>
                        </div>                        
                        <div class='text-right btn-sm'>
                            <button class='btn btn-primary' onclick='javascript:updateMovimiento()'>Guardar Movimiento</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script>
        $(document).ready(function() {
            // Colapsar/Expandir Sidebar
            $('#sidebarCollapse').on('click', function() {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
            
            // Hacer que los items del sidebar sean activos al hacer clic
            $('.sidebar-item').on('click', function() {
                $('.sidebar-item').removeClass('active');
                $(this).addClass('active');
            });
        }); 

        function searchProyect(){
            $('#miModalProyectos').modal('show');
        }

        function changeMaterial(){
            alert ("Cambiando material")
        }

        function updateMovimiento(){
            try {
                paso=1;
                var idMovimientoV=document.getElementById('idMovimiento').value;
                paso=2;
                var estadoV=document.getElementById('estado').value;
                paso=3;
                var observacionV=document.getElementById('observacion').value;

                paso=80;
                $.ajax({
                    url: "{{ path('app_actualizar_movimento') }}",
                    type: "post",
                    dataType: "html",
                    data : {
                        idMovimiento:idMovimientoV,
                        estado:estadoV,
                        observacion:observacionV

                    }
                }).done(function (res) {
                    paso=81;
                    //console.log (res);
                    var data = JSON.parse(res); 
                    paso=82;               
                    console.log  (data);  
                    paso=83;                                    
                    if (data.valor=="1"){
                        paso=84;
                        cadena=data.mensaje;
                        paso=85;
                        msgInfo(cadena);
                        paso=86;
                        setTimeout(function() {
                            window.location="{{ path('app_movimiento_index') }}";
                        }, 5000);                    
                    } else if (data.valor=="-1") {
                        paso=87;
                        cadena=data.mensaje;
                        paso=88;
                        msgError(cadena);
                    } else if (data.valor=="-2") {
                        paso=87;
                        cadena=data.mensaje;
                        paso=88;
                        msgError(cadena);                        
                    } else {
                        paso=89;
                        cadena="Ocurrió un error que no pudo ser controlado<br>Inténtelo de nuevo";
                        paso(90);
                        msgError(cadena);
                    }
                });   
            } catch (error) {
                // Código que se ejecuta si hay un error en el bloque try
                console.error("¡Ha ocurrido un error en el procedimiento updateMovimiento");
                console.error("Mensaje de error:", error.message,"paso:",paso);
                console.error("Tipo de error:", error.name);
            }  
        }

        function cierraModal(){
            $('#miModal').modal('hide');
        }

        function cierraModal2(){
            $('#miModalProyectos').modal('hide');
        }     
        
        function msgError (cadena){
            var cadena="<span class='text-danger'>"+cadena+"</span>";
            $('#miModal').find('.modal-body').html(cadena);
            const tituloModal = document.querySelector('#miModal .modal-title');
            tituloModal.innerHTML = "Atención";
            $('#miModal').modal('show');    
        }

        function msgWarning (cadena){
            var cadena="<span class='text-warning'>"+cadena+"</span>";
            $('#miModal').find('.modal-body').html(cadena);
            const tituloModal = document.querySelector('#miModal .modal-title');
            tituloModal.innerHTML = "Atención";
            $('#miModal').modal('show');     
        }

        function msgInfo (cadena){
            var cadena="<span class='text-info'>"+cadena+"</span>";
            $('#miModal').find('.modal-body').html(cadena);
            const tituloModal = document.querySelector('#miModal .modal-title');
            tituloModal.innerHTML = "Atención";
            $('#miModal').modal('show');     
        }        
    </script>
{% endblock %}
{% block modales %}
    <!-- cuadro modal  de anuncios -->
    <div class="modal fade" id="miModal" tabindex="-1" role="dialog" aria-labelledby="miModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="miModalLabel">Título del Modal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar" onclick="javascript:cierraModal()">
