    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movimiento.id }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ movimiento.tipo }}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
