{% extends 'base.html.twig' %}

{% block title %}Editar Materiales{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <button type="button" id="sidebarCollapse" class="btn btn-dark mr-2">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand" href="#">
           <img src="../../{{ logo }}" alt="Logo" style="height:45px !important">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-user-circle mr-1"></i> Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><i class="fas fa-cog mr-1"></i> Configuración</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt mr-1"></i> Salir</a>
                </li>
            </ul>
        </div>
    </nav>    
    <!-- Sidebar -->
    {% include 'navigation_admin.html.twig' %}
    <!-- Contenido Principal -->
    <div id="content">
        <div class="row" style="padding-top:50px !important">
            <div class="col-11 col-md-5 col-lg-5 mx-auto mt-0 mt-md-auto mb-0 mb-md-auto">
                <div class='text-right'>
                    <a href="{{ path('app_inventario_index') }}" title="Regresar al Listado"><i class="fa-solid fa-list"></i></a>
                </div>
                <div class='card'>
                    <div class='card-header'>
                        <h2>Datos del Material</h2>
                    </div>
                    <div class='card-body'>
                    <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ inventario.id }}</td>
                                </tr>
                                <tr>
                                    <th>Codigo</th>
                                    <td>{{ inventario.codigo }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre</th>
                                    <td>{{ inventario.nombre }}</td>
                                </tr>
                                <tr>
                                    <th>Modelo</th>
                                    <td >{{ inventario.modelo }}</td>
                                </tr>
                                <tr>
                                    <th>Estado</th>
                                    <td class='text-center'>
                                        {% if (inventario.estado =="1") %}
                                            <span class='text-success'>Activo</span>
                                        {% else %}
                                            <span class='text-danger'>Inactivo</span>
                                        {% endif %}                                            
                                    </td>
                                </tr>
                                <tr>
                                    <th>Existencia</th>
                                    <td class='text-right'>
                                        {% set nivelAdvertencia = (((inventario.critico * 0.5 ) + inventario.critico)) %}
                                        {% if (inventario.existencia <= inventario.critico) %}
                                            <span class='text-danger'>
                                        {% elseif ((inventario.existencia <= nivelAdvertencia)  and (inventario.existencia >= inventario.critico)) %}
                                            <span class='text-warning'>
                                        {% else %}
                                            <span class='text-success'>
                                        {% endif %} 
                                        {{ inventario.existencia }} </span>
                                        {{ inventario.unidad.simbolo  }}
                                    </td>
                                </tr>
                              <tr>
                                    <th>Nivel Mínimo de Existencia</th>
                                    <td class='text-right'>{{ inventario.critico }} {{ inventario.unidad.simbolo }}</td>
                                </tr>                                
                                <tr>
                                    <th>Fecha de Actualización</th>
                                    <td class='text-center'>{{ inventario.fechaAct ? inventario.fechaAct|date('d/m/Y') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Costo</th>
                                    <td class='text-right'>{{ inventario.costo ? inventario.costo|number_format(2, '.', '') : 0.00 }}</td>
                                </tr>   
                               <tr>
                                    <th>Precio Venta</th>
                                    <td class='text-right'>{{ inventario.precio ? inventario.precio|number_format(2, '.', '') : 0.00 }}</td>
                                </tr> 
                               <tr>
                                    <th>Tipo</th>
                                    <td class='text-center'>
                                        {% if (inventario.tipo =="1") %}
                                            <span class='text-success'>Materiales</span>
                                        {% else %}
                                            <span class='text-info'>Servicio</span>
                                        {% endif %}                                            

                                    </td>
                                </tr>                                                                                               
                            </tbody>
                        </table>

                        <div class="text-right">
                            <a href="{{ path('app_inventario_edit', {'id': inventario.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script>
        $(document).ready(function() {
            // Colapsar/Expandir Sidebar
            $('#sidebarCollapse').on('click', function() {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
            
            // Hacer que los items del sidebar sean activos al hacer clic
            $('.sidebar-item').on('click', function() {
                $('.sidebar-item').removeClass('active');
                $(this).addClass('active');
            });
        }); 
    </script>
{% endblock %}
