{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="fondo-log">
		<div class="container-fluid">
			{% if app.user %}
				<div class="mb-3">
					Usted se encuentra identificado como
					{{ app.user.email }},
					<a href="{{ path('app_logout') }}">Salir</a>
				</div>
			{% endif %}
			<div class="row centrado">
				<div class="col-12 col-md-12 col-lg-12">
					<div class="card login_card rounded-3">
						<div class="card-header">
							<img class='img-fluid' src="assets/images/logo_mygraph.png" width='200px'>
							<h3>Iniciar sesión</h3>
						</div>
						<div class="card-body">
							<form method="post">
									<div class="userlog">
										<input type="text" value="{{ last_username }}" name="_username" id="_username" autocomplete="username" required autofocus/>
										<label for="username">Usuario</label>
									</div>
									<div class="userlog">
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
										<input type="password" name="_password" id="_inputPassword" autocomplete="current-password" required/>
										<label for="password">Contraseña</label>
									</div>
									<div class="col-12 col-md-12 col-lg-12 text-end">
										<button class='btn btn-primary boton02' type="submit">Entrar</button>
									</div>
							</form>
						</div>
					</div>
                <p class='text-center'><a href='/register'>Registrarse</a></p>
                    </div>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}


            </div>
		</div>
	</div>
{% endblock %}